<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/visit_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_image"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/visit_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome de usuario"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/visit_profile_image"></TextView>

    <TextView
        android:id="@+id/visit_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isto é moito millor ca WhatsApp."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/visit_user_name"></TextView>

    <Button
        android:id="@+id/add_to_friends_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fagámonos amigos."
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="@color/colorTitleText"
        android:background="@drawable/buttons"
        app:layout_constraintTop_toBottomOf="@+id/visit_user_status"></Button>

    <Button
        android:id="@+id/decline_friends_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar petición de amizade."
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="@color/colorTitleText"
        android:background="@drawable/buttons"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/add_to_friends_button"></Button>



</androidx.constraintlayout.widget.ConstraintLayout>